@charset "utf-8"
@import '../libs/easing'
@import '../libs/mixins'
@import '../base/meta'

@import '../base/base'

@import '../modules/common/*'

// @media screen and (max-width: (BREAKPOINT)px)
.wrapper
  width 100%
  height 100%

.mv
  height 100vh
  background-image url(IMAGE_DIR+"index_10.jpg")
  background-size contain
  background-position center

.cont
  position relative
  width 100%

.box
  width 300px
  margin 0 auto
  padding 100px

.inview
  opacity 0
  transition opacity 540ms ease

  &--enter
    opacity 1
  
.border
  transform scaleX(0)
  transition-origin center
  height 2px
  background-color white
  
.orange
  background-color #f0e68c

.purple
  z-index 1
  background-color #d8bfd8

.green
  z-index 2
  background-color #66cdaa


.modal
  position fixed
  z-index 999
  top 0
  left 0
  right 0
  bottom 0
  display none
  overflow scroll
  opacity 0

  &__wrap
    padding 50px 0 100vh
    width 100%
    background-color rgba(0,0,0,0.5)

  &__cont
    position relative
    width 560px
    margin 50px auto
    background-color white

  &__list
    width 300px
    margin 30px auto 0
  
  &__item
    opacity 0
    transition opacity 540ms ease

    &.inview--enter
      opacity 1

  &__ttl
    font-size 30px
    text-align center
    margin-bottom 50px

  &__close
    position sticky
    top 100px
    width 30px
    font-size 50px
