@charset "utf-8"
@import '../libs/easing'
@import '../libs/mixins'
@import '../base/meta'

@import '../base/base'

@import '../modules/common/*'

// @media screen and (max-width: (BREAKPOINT)px)
.wrapper
  width 100%
  height 100%

.mv
  height 100vh
  background-image url(IMAGE_DIR+"icon.jpg")
  background-size cover
  background-position center

.cont
  position relative
  width 100%

.image
  width 300px
  margin 0 auto
  padding 100px

.inview
  opacity 0
  transition opacity 540ms ease

  &--enter
    opacity 1
  
.border
  transform scaleX(0)
  transition-origin center
  height 2px
  background-color white
  
.orange
  background-color orange 

.purple
  z-index 1
  background-color purple

.green
  z-index 2
  background-color green